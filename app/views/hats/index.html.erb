<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Gnome Hats</h1>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Add new hat", new_hat_path, class: "btn btn-flat" %>
  </div>

  <div class="cards">
      <% @hats.each do |hat| %>
        <%= link_to hat_path(hat), class:"text-decoration-none" do %>
          <div class="card-product">
          <%# this image below is hard-coded for now just for testing %>
            <img src= <%= asset_path('22936D8A-11AA-4F97-A6B3-724007C1B933_1_201_a.jpeg') %> >
            <div class="card-product-info">
              <div>
                <p><%= "Style: #{hat.style}" %></p>
                <p><%= "Color: #{hat.color}" %></p>
              </div>
                <p class="card-product-pricing"><%= "Price: Â£#{hat.price}" %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
