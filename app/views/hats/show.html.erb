<div class="container py-4">
  <div class="row">
    <div class="col-md">
      <% if @hat.photo.attached? %>
      <%= cl_image_tag @hat.photo.key, class:"img-fluid w-70" %>
      <% end %>
    </div>
    <div class="col-md">
      <div>
        <h3><%= @hat.style %></h3>
        <p><strong>Colour:</strong> <%= @hat.color %></p>
        <p><strong>Description:</strong> <%= @hat.description %></p>
      </div>
      <div>
        <h3>Price: <%= "Â£#{@hat.price}" %></h3>
      </div>
      <% if current_user != @hat.user %>
        <%= link_to "Rent this hat", new_hat_booking_path(@hat), class:"btn btn-danger" %>
      <% else %>
        <%= link_to "Edit this hat", edit_hat_path(@hat), class:"btn btn-danger" %>
        <%= link_to "Delete this hat", hat_path(@hat), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
      <% end %>
      <div class="mt-4">
      <h2>Reviews:</h2>
  <% if @hat.reviews.any? %>
    <% @hat.reviews.each do |review| %>
        <p>Comment: <%= review.comment %></p>
        <p>Rating: <%= review.rating %></p>
      </div>
    <% end %>
  <% else %>
    <p>No reviews yet.</p>
  <% end %>
</div>
      </div>
    </div>
  </div>
</div>
